{
    "name": "brightecapital/logger",
    "description": "Extension of monolog to adapt to Brighte's needs",
    "keywords": ["logger", "monolog"],
    "homepage": "https://bitbucket.org/brighte/logger/",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammed Fahad",
            "email": "mohammed.fahad@brighte.com.au"
        }
    ],
    "require": {
        "php": "^7.4|^8.1",
        "monolog/monolog": "^1.6",
        "sentry/sdk": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "BrighteCapital\\Logger\\": "src"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "cs": "vendor/bin/phpcs -ps --standard=PSR12 src/",
        "cbf": "vendor/bin/phpcbf --standard=PSR12 src/"
    }
}
